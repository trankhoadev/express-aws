<!DOCTYPE html>
<html>
  <head>
    <title>Test</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
    />
  </head>

  <style>
    img {
      width: 50px;
    }
  </style>
  <body>
    <div class="container">
      <form action="/" method="POST" enctype="multipart/form-data">
        <div class="form-group py-2">
          <label for="">Product ID: </label>
          <input name="id" type="text" class="form-control" />
        </div>

        <div class="form-group py-2">
          <label for="">Price: </label>
          <input name="price" type="text" class="form-control" />
        </div>

        <div class="form-group py-2">
          <label for="">Brand: </label>
          <input name="brand" type="text" class="form-control" />
        </div>

        <div class="form-group py-2">
          <label for="">Specific: </label>
          <input name="specific" type="text" class="form-control" />
        </div>

        <div class="form-group py-2">
          <label for="">Name: </label>
          <input name="name" type="text" class="form-control" />
        </div>

        <div class="form-group py-2">
          <label for="">Image: </label>
          <input name="image" type="file" class="form-control" />
        </div>

        <div class="d-flex justify-content-center py-2">
          <button class="btn btn-success submit">Send</button>
        </div>
      </form>

      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Gia</th>
            <th>Hang</th>
            <th>Chi Tiet</th>
            <th>Ten</th>
            <th>Hinh Anh</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i = 0; i < data.length; ++i) { %>
          <tr>
            <td><%= data[i].maMay %></td>
            <td><%= data[i].gia %></td>
            <td><%= data[i].hang %></td>
            <td><%= data[i].chiTiet %></td>
            <td><%= data[i].ten %></td>
            <td><img src="<%= data[i]?.image %>"></td>
            <td>
              <a href="/update?id=<%= data[i].maMay %>">Update</a>
              <a href="/delete?id=<%= data[i].maMay %>">Delete</a>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </body>
</html>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
